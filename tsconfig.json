{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "baseUrl": "./",
    "outDir": "dist",
    "removeComments": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "paths": {
      "@/tests/*": ["../tests/*"],
      "@/*": ["src/*"]
    }
  },
  "include": ["src", "test"],
  "exclude": ["node_modules", "src/env.ts", "dir"]
}
