{
  "name": "nba-scraping",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "test": "jest --passWithNoTests --runInBand --no-cache",
    "test:unit": "npm test -- --watch -c jest.unit.config.js",
    "test:integration": "npm run container:database:up && npm run database:push && npm test -- --watch -c jest.integration.config.js && npm run container:database:down",
    "database:generate": "prisma generate --schema=src/infra/database/postgres/prisma/schema.prisma",
    "database:push": "prisma db push --schema=src/infra/database/postgres/prisma/schema.prisma",
    "database:pull": "prisma db pull --schema=src/infra/database/postgres/prisma/schema.prisma",
    "container:database:up": "docker-compose up -d",
    "container:database:down": "docker-compose down"
  },
  "author": "",
  "license": "ISC",
  "description": "",
  "devDependencies": {
    "@faker-js/faker": "^7.6.0",
    "@types/jest": "^29.4.0",
    "@typescript-eslint/eslint-plugin": "^5.54.0",
    "@typescript-eslint/parser": "^5.54.0",
    "eslint": "^8.35.0",
    "jest": "^29.4.3",
    "prisma": "^4.11.0",
    "ts-jest": "^29.0.5",
    "typescript": "^4.9.5",
    "@prisma/client": "^4.11.0"
  }
}
